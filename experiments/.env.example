# PM Agent Experiment Configuration

# API Keys (required for experiments)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pm_agent_experiments
REDIS_URL=redis://localhost:6379

# PM Agent Configuration
PM_AGENT_API_URL=http://localhost:8000
PM_AGENT_API_KEY=your_pm_agent_key_here

# Experiment Settings
EXPERIMENT_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_AGENTS=50
DEFAULT_AGENT_COUNT=5

# Cost Tracking
TRACK_COSTS=true
COST_ALERT_THRESHOLD=100.0

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_MONITORING=true

# Git Configuration (for experiment repos)
GIT_USER_NAME=PM Agent Experiments
GIT_USER_EMAIL=experiments@pm-agent.local

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=experiments.log

# SWE-bench Configuration
SWEBENCH_CACHE_DIR=./cache/swebench
SWEBENCH_TIMEOUT=600

# Human-in-the-Loop Simulation
HUMAN_RESPONSE_DELAY_MIN=30
HUMAN_RESPONSE_DELAY_MAX=300
HUMAN_APPROVAL_RATE=0.85